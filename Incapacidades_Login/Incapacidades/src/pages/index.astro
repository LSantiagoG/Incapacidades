---
import "../styles/styles.css";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | I-Reports</title>

  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;600&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.x/css/materialdesignicons.min.css" rel="stylesheet" />
  <link rel="icon" type="image/png" sizes="32x32" href="/icono.png" />

  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <ul class="bg-bubbles">
    <li></li><li></li><li></li><li></li><li></li>
    <li></li><li></li><li></li><li></li><li></li>
  </ul>

  <div class="container">
    <div class="form-wrapper">
      <img src="/Logo_1.jpg" alt="Logo" class="logo" />

      <div class="text-center">
        <h3 class="mb-0">Bienvenido!</h3>
        <p class="text-muted mt-2">Ingresa para continuar a I-Reports.</p>
      </div>

      <!-- Formulario con ID para el JS -->
      <form id="login-form">
        <div class="form-group">
          <label for="email">Correo</label>
          <div class="input-icon-wrapper">
            <img src="/correo-electronico.png" alt="" class="field-icon" />
            <input type="email" id="email" placeholder="Digite su correo" required />
          </div>
        </div>

        <div class="form-group">
          <label for="password">Contraseña</label>
          <div class="input-icon-wrapper password-wrapper">
            <img src="/cerrar.png" alt="" class="field-icon" />
            <input type="password" id="password" placeholder="Ingrese su Contraseña" required />
            <button class="toggle-password" type="button" aria-label="Mostrar contraseña">
              <i class="mdi mdi-eye-outline"></i>
            </button>
          </div>
          <a href="/recuperar" class="forgot-password">¿Recordar Contraseña?</a>
        </div>

        <div class="options">
          <label><input type="checkbox" /> Mantener sesión iniciada</label>
        </div>

        <button type="submit" class="btn">Ingresar</button>
        <a href="/otp" class="btn" style="margin-top: 10px; display: inline-block; text-align: center;">
          Ingresar con número telefónico
        </a>
      </form>

      <div class="social">
        <p>- Ingresar con -</p>
        <div class="social-icons">
          <a href="https://www.facebook.com/login.php" class="facebook">f</a>
          <a href="https://twitter.com/login" class="twitter">t</a>
          <a href="https://accounts.google.com/signin" class="google">G</a>
        </div>
      </div>

      <p class="register">¿No tienes una cuenta? <a href="/registrate">Regístrate Aquí</a></p>
      <footer>© 2018 – 2025 Incapacidades.co, Hecho con ❤️</footer>
    </div>
  </div>

  <script src="/js/toggle.js" defer></script>
  <script src="/js/usuario_prueba.js" defer></script>
</body>
</html>
